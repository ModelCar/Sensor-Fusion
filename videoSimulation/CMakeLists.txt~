cmake_minimum_required(VERSION 2.8)
project( Sensorsimulation )
find_package( OpenCV REQUIRED )
add_definitions(-std=c++11)
add_executable( Sensorsimulation sensorsimulation.cpp obstacle.cpp ../kstatics.cpp)
target_link_libraries( Sensorsimulation ${OpenCV_LIBS} /usr/local/lib/libkalman.a)
set(CMAKE_BUILD_TYPE Release)
