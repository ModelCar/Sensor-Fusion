#ifndef OBSTACLE_H
#define OBSTACLE_H

#include "../kalman/ekfilter.hpp"

namespace Kalman {
class obstacleEKF : public Kalman::EKFilter<double,1>
{
public:
	obstacleEKF();
	bool dataFeasibility(const Vector& z);
protected:
	void makeBaseA();
	void makeBaseW();
	void makeBaseQ();

	void makeBaseH();
	void makeV1(const Vector& z);
	void makeV2();
	void makeBaseR();

	void makeProcess();
	void makeMeasure();

	double T, Distance;
};

typedef obstacleEKF::Vector Vector;
typedef obstacleEKF::Matrix Matrix;
}

#endif
